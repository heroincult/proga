#include <stdio.h>

int main() {
    int m, n;

    // Ввод номера месяца и числа
    printf("Введите номер месяца (1-12): ");
    scanf("%d", &m);
    printf("Введите число: ");
    scanf("%d", &n);

    // Массив с количеством дней в каждом месяце (не учитываем високосные годы)
    int daysInMonth[] = {0, 31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};

    // Проверка на корректность ввода
    if (m < 1 || m > 12 || n < 1 || n > daysInMonth[m]) {
        printf("Некорректный ввод даты.n");
        return 1;
    }

    // Определяем следующий день
    n += 1; // Переход к следующему дню

    // Если число превышает количество дней в месяце
    if (n > daysInMonth[m]) {
        n = 1; // Сбрасываем число на 1
        m += 1; // Переходим к следующему месяцу
    }

    // Если месяц превышает 12, сбрасываем его на 1 (переход на следующий год)
    if (m > 12) {
        m = 1; // Начинаем с января следующего года
    }

    // Вывод результата
    printf("Следующий день: %d/%dn", n, m);

    return 0;
}
