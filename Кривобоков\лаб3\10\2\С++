#include <iostream>
using namespace std;

int main() {
    int zone;
    float cost;

    // Ввод номера тарифной зоны
    cout << "Введите номер тарифной зоны (1-6): ";
    cin >> zone;

    // Определение стоимости минуты разговора в зависимости от тарифной зоны
    switch (zone) {
        case 1:
            cost = 0.50; // Стоимость для зоны 1
            break;
        case 2:
            cost = 1.00; // Стоимость для зоны 2
            break;
        case 3:
            cost = 1.50; // Стоимость для зоны 3
            break;
        case 4:
            cost = 2.00; // Стоимость для зоны 4
            break;
        case 5:
            cost = 2.50; // Стоимость для зоны 5
            break;
        case 6:
            cost = 3.00; // Стоимость для зоны 6
            break;
        default:
            cout << "Некорректный номер тарифной зоны." << endl;
            return 1; // Завершение программы при некорректном вводе
    }

    // Вывод стоимости минуты разговора
    cout << "Стоимость минуты разговора для тарифной зоны " << zone << ": " << cost << endl;

    return 0;
}
